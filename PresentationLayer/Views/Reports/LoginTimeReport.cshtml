@model PresentationLayer.Models.LoginReportModel
@{ ViewData["Title"] = "LoginTimeReport"; }
@{
    Layout = null;
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

</head>
<body>
    @Html.Partial("Navbar")
    <div class="container">
        <div class="card-deck mt-5">
            <div class="card bg-warning">
                <h5 class="card-title">Average Login Time</h5>
                <div class="card-body text-center">
                    <p class="card-text">Average login time on @Model.SearchedDate.Date.ToShortDateString() is: @Model.LoginTime seconds</p>
                    <form asp-controller="Reports" asp-action="LoginTimeReport" method="post">
                        <label for="date">Select Day</label>
                        <input class="form-control" type="date" id="date" name="date">
                        <button type="submit" class="btn btn-primary mt-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

